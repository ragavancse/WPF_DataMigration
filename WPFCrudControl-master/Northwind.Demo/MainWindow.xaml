<mui:ModernWindow
    x:Class="Northwind.Demo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ignore="http://www.galasoft.ch/ignore"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mui="http://firstfloorsoftware.com/ModernUI"
    Title="Data Migration"
    Height="800"
    MinWidth="1100"
    ContentSource="/Views/Products/ProductsList.xaml"
    DataContext="{Binding Main, Source={StaticResource Locator}}"
    Icon="/Resources/Images/DemoIcon.png"
    IsTitleVisible="True"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d ignore">

    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="Lookups">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Configuration" Source="/Views/Products/ProductsList.xaml" />
                <mui:Link DisplayName="Import" Source="/Views/Import/ImportList.xaml" />
                <mui:Link DisplayName="Map" Source="/Views/Map/MapList.xaml" />

            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>
</mui:ModernWindow>
